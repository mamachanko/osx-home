#!/usr/bin/env bash

set -euo pipefail

set +x

decoded_public_gpg_key=$(op read op://Personal/GPG/"base64 encoded public gpg key" | base64 --decode)
decoded_secret_gpg_key=$(op read op://Personal/GPG/"base64 encoded secret gpg key" | base64 --decode)

gpg --import <(echo "$decoded_public_gpg_key")
gpg --import <(echo "$decoded_secret_gpg_key")

gpg --list-keys

GPG_TTY=$(tty)
export GPG_TTY

echo "this is a test" | gpg --sign --armor

