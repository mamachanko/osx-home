#!/usr/bin/env bash

set -o pipefail

main() {
  echo "sourcing .bashrc"

  configure_bash
  configure_kitty
  configure_fuzzyfinder
  configure_direnv
  configure_pyenv

  echo "sourcing .bashrc done"
}

configure_bash() {
  configure_env
  configure_aliases
  configure_functions
  configure_prompt
  configure_keys
  configure_functions
}

configure_env() {
  source ~/.vendor/bash/colours.bash
  source ~/.vendor/bash/git-completion.bash
  source "/usr/local/Caskroom/google-cloud-sdk/latest/google-cloud-sdk/path.bash.inc"
  source "/usr/local/Caskroom/google-cloud-sdk/latest/google-cloud-sdk/completion.bash.inc"
  source "$HOME/.sdkman/bin/sdkman-init.sh"

  export LANG=en_US.UTF-8
  export EDITOR=nvim
  export LESS=-Ri

  # Do not immediately quit the shell on C-d, but only after the third time.
  export IGNOREEOF=2

  # Include my personal scripts in PATH.
  PATH="$HOME/bin:$PATH"
  PATH="$HOME/workspace/osx-home/bin:$PATH"
  PATH="/usr/local/bin:$PATH"
  PATH="$HOME/go/bin:$PATH"
  PATH="$(pyenv root)/shims:$PATH"
  export PATH

  # Set TERM='xterm-256color' to get proper color support in Vim and other
  # applications.
  export TERM='xterm-256color'

  # This erases duplicates in the command history, keeps 10k entris, and
  # appends to the history file rather than overwriting it.
  export HISTCONTROL=ignoredups:erasedups
  export HISTSIZE=10000
  export PROMPT_COMMAND="history -a; history -c; history -r; $PROMPT_COMMAND"
  shopt -s histappend

  export LSCOLORS="GxFxCxDxBxEgEdabagacad"
  export GREP_OPTIONS="--color"

  # Hide the Bash deprecation warning on newer versions of macOS.
  # See: https://support.apple.com/en-gb/HT208050
  export BASH_SILENCE_DEPRECATION_WARNING=1

  # Configure readline to use VI key bindings.
  set -o vi

  # Make GPG happy
  export GPG_TTY=$(tty)

  export GO111MODULE=on
  export GIT_DUET_ROTATE_AUTHOR=1

  # fzf
  export FZF_DEFAULT_COMMAND='fd --type f --type d --hidden --follow --exclude=.git --exclude=.idea --exclude=.vscode --exclude=.sass-cache --exclude=node_modules --exclude=build --exclude=Library'
  # Use ~~ as the trigger sequence instead of the default **
  export FZF_COMPLETION_TRIGGER='~~'
  # Options to fzf command
  export FZF_COMPLETION_OPTS="--border --info=inline --preview 'bat --style=numbers --color=always --line-range :500 {}'"
}

configure_aliases() {
  alias vim=nvim

  alias ls='exa -la'
  alias ll='ls'

  alias watch='watch -c '

  alias cat=bat

  source <(yq shell-completion bash)

  # Kubernetes
  source <(kubectl completion bash)
  alias k=kubectl
  alias kn='kubectl config set-context --current --namespace '
  alias kc='kubectl cluster-info --context '
  alias kdebug='kubectl run debug-shell --rm -i --tty --image nicolaka/netshoot -- /bin/bash'
  alias kw="watch kmonitor"
  export do='â€”dry-run=client -o=yaml'
  export die='--grace-period=0 --force'
  complete -F __start_kubectl k

  # Docker
  alias cleandocker="docker system prune --force --all --volumes && docker network prune --force"
}

configure_prompt() {
  source "$(which prompt)"
}

configure_keys() {
  # Configure up/down arrow keys to search through history.
  bind '"\e[A": history-search-backward'
  bind '"\e[B": history-search-forward'
  bind '"\eOA": history-search-backward'
  bind '"\eOB": history-search-forward'
}

# Functions
v() {
  local file
  file=$(fzf)
  nvim "$file"
}

vag() {
  local files
  files=$(ag -l "$1" "${2:=.}")
  vim "$files"
}

saferbash() {
  local filename
  filename="${1:?}"
  cat <<EOF > "$filename"
#!/usr/bin/env bash

set -euo pipefail

cd "\$(dirname "\$0")"

EOF
  chmod +x "$filename"
  vim "$filename"
}

kmonitor() {
  printf '\x1b[34mContext: \x1b[1m%s\x1b[0m\n' "$(kubectx --current)"
  printf '\x1b[34mNamespace: \x1b[1m%s\x1b[0m\n' "$(kubens --current)"
  echo
  kubectl get all,secrets,sa,ingress
}

__expand() {
  return 0
}

configure_functions() {
  export -f kmonitor
  export -f v
  export -f vag
  export -f __expand
}

configure_direnv() {
  eval "$(direnv hook bash)"
}

configure_kitty() {
  source /dev/stdin <<<"$(kitty + complete setup bash)"
}

configure_fuzzyfinder() {
  [ -f ~/.fzf.bash ] && source ~/.fzf.bash
}

configure_pyenv() {
  eval "$(pyenv init -)"
  eval "$(pyenv virtualenv-init -)"
}

# configure bash completion
#[[ -r "/usr/local/etc/profile.d/bash_completion.sh" ]] && . "/usr/local/etc/profile.d/bash_completion.sh"

main

