[core]
  editor = nvim

[alias]
  l = log --decorate --stat
  ll = log --graph --decorate --pretty=oneline --abbrev-commit
  lll = log --graph --decorate --pretty=oneline --abbrev-commit --all
  s = status --branch -s --untracked-files=all
  st = status
  su = stash -u
  sp = stash pop
  pr = pull -r
  d = diff
  ds = diff --staged
  ap = add --patch
  c = commit
  co = checkout
  message = !$EDITOR ~/.gitcommitmessage

[color]
  branch = auto
  diff = auto
  interactive = auto
  status = auto

[url "git@github.com:"]
  insteadOf = https://github.com/

[commit]
  gpgSign = true
  template = ~/.gitcommitmessage

[gpg]
  program = gpg

[user]
  signingkey = CB7D1629DFDB41A59E54C5395B79E81F346C8D5E
  name = Max Brauer
  email = mbrauer@vmware.com

[github]
  name = mamachanko

[pager]
  diff = delta
  log = delta
  reflog = delta
  show = delta

[interactive]
  diffFilter = delta --color-only

[delta]
  features = side-by-side line-numbers decorations
  whitespace-error-style = 22 reverse

[delta "decorations"]
  commit-decoration-style = bold yellow box ul
  file-style = bold yellow ul
  file-decoration-style = none

