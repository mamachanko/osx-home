[core]
  editor = nvim

[alias]
  l = log --decorate --stat
  ll = log --graph --decorate --pretty=oneline --abbrev-commit
  lll = log --graph --decorate --pretty=oneline --abbrev-commit --all
  s = status --branch -s --untracked-files=all
  st = status
  su = stash -u
  sp = stash pop
  pr = pull -r
  d = diff
  ds = diff --staged
  ap = add --patch
  c = commit
  co = checkout
  message = !$EDITOR ~/.gitcommitmessage

  # https://stackoverflow.com/questions/1057564/pretty-git-branch-graphs
  lg1 = log --graph --abbrev-commit --decorate --format=format:'%C(bold blue)%h%C(reset) - %C(bold green)(%ar)%C(reset) %C(white)%s%C(reset) %C(dim white)- %an%C(reset)%C(bold yellow)%d%C(reset)' --all
  lg2 = log --graph --abbrev-commit --decorate --format=format:'%C(bold blue)%h%C(reset) - %C(bold cyan)%aD%C(reset) %C(bold green)(%ar)%C(reset)%C(bold yellow)%d%C(reset)%n''          %C(white)%s%C(reset) %C(dim white)- %an%C(reset)' --all
  lg = !"git lg1"

[color]
  branch = auto
  diff = auto
  interactive = auto
  status = auto

[commit]
  gpgSign = true
  template = ~/.gitcommitmessage

[gpg]
  program = gpg

[user]
  signingkey = CB7D1629DFDB41A59E54C5395B79E81F346C8D5E
  name = Max Brauer
  email = mbrauer@vmware.com

[github]
  name = mamachanko

[pager]
  diff = delta
  log = delta
  reflog = delta
  show = delta

[interactive]
  diffFilter = delta --color-only

[delta]
  features = side-by-side line-numbers decorations
  whitespace-error-style = 22 reverse

[delta "decorations"]
  commit-decoration-style = bold yellow box ul
  file-style = bold yellow ul
  file-decoration-style = none

[init]
	defaultBranch = main
